{% extends "base.html.twig" %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 text-center">
                <span class="mt-3 mb-3 float-left"><strong>Logado como</strong> {{ usuario.username }} ({{ usuario.email }})</span>
                <a href="{{ path('fos_user_security_logout') }}" class="mt-3 mb-3 float-right">Sair</a>
            </div>
        </div>  
        <div class="row">
            <div class="col-12">
                <h4 class="text-center mt-3 mb-3">Frases Recebidas - {{ filial.nome|default('GERAL') }}</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-10 offset-1 text-center">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <td>Nome</td>
                            <td>CPF</td>
                            <td>Data Nascimento</td>
                            <td>Telefone</td>
                            <td>Nome Respons&aacute;vel</td>
                            <td>CPF Respons&aacute;vel</td>
                            <td>Telefone Respons&aacute;vel</td>
                            <td>Cidade Mais Pr&oacute;xima</td>
                            <td>Aceitou Regulamento?</td>
                            <td>Frase</td>
                            <td>Data do Envio</td>
                        </tr>
                    </thead>
                    <tbody>
                    {% for e in entradas %}
                        <tr>
                            <td>{{ e.nome }}</td>
                            <td>{{ e.cpf }}</td>
                            <td>{{ e.dataNascimento }}</td>
                            <td>{{ e.telefone }}</td>
                            <td>{{ e.nomeResponsavel }}</td>
                            <td>{{ e.cpfResponsavel }}</td>
                            <td>{{ e.telefoneResponsavel }}</td>
                            <td>{{ e.filial }}</td>
                            <td>{{ e.regulamentoAceito == 1 ? 'Sim' : 'NÃ£o' }}</td>
                            <td>{{ e.frase|raw }}</td>
                            <td>{{ e.dataCadastro|date('d/m/Y H:i') }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                
            </div>
        </div>
    </div>
{% endblock body %}
{% block javascripts %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/estilos-admin.css') }}" />

    <script>
        $(document).ready(function () {
            
        });
    </script>
{% endblock javascripts %}